{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    body {
       height: 100vh; 
    }
    .submit {
        width: 120px !important;
        text-align: center;
    }
    .contain-center {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;

    }

</style>
<div class="contain-center h-100">
    <div class="contain-center rounded bg-light w-50">
        {{ form_start(registrationForm) }}
            <div>
            <h1 class="w-100 contain-center">Register</h1>
                <div class="col">
                    <div class="row m-2">
                    {{ form_label(registrationForm.email) }}
                    {{ form_widget(registrationForm.email) }}
                    </div>
                    <div class="row m-2">
                        {{ form_label(registrationForm.plainPassword) }}
                        {{ form_widget(registrationForm.plainPassword) }}                 
                    </div>
                    <div class="row m-2">
                        {{ form_rest(registrationForm) }}
                    </div>
                    <div class="contain-center">
                        <button class="d-flex justify-content-center
                            m-3 btn btn-primary submit" type="submit">Register</button>
                    </div>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
