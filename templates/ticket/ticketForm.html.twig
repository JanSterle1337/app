<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {% for gameRound in gameRounds %}
            <div class="container">
                <form method="POST" action="/games/{{ slug }}/ticket">
                    <h1>{{gameRound.getName() }}</h1>

                    <input type="hidden" name="gameRoundID" value="{{ gameRound.getId }} "/>

                    <input type="hidden" name="gameID" value={{ gameRound.getGameID.getId }} />

                    <label>Write your combination</label>
                    <input type="text" name="combination" />

                    <button type="submit" name="submit">Submit</button>

                </form>
            </div>
        {% endfor %}

    </body>
</html>